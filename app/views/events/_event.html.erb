<div class="pad-div", style="background: url(<%= event.image_url.to_s %>) no-repeat center center fixed"></div>

<div class="pad-section title">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
      <div class="text-vcenter">
        <h1><%= event.name %></h1>
      </div>
    </div>
  </div>
</div>

<div class="pad-section">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
      <h4>
        <%= event.created_at.strftime("%d") %> <%= event.created_at.strftime("%B") %>
        <% if event.created_at.today? %>
          <span class="label label-primary">Ny!</span>
        <% end %>
      </h4>
      <%= markdown event.description %>
      <p><%= event.last_reserv_date %></p>
      <p><%= event.start_at %></p>
      <p><%= event.end_at %></p>
      <p><%= event.location %></p>
      <%= link_to 'Destroy', event_path(event), method: :delete, data: {confirm: 'Are you sure?'} %>
      <%= link_to 'Edit', edit_event_path(event) %>
    </div>
  </div>
</div>
