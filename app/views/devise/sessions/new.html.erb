<%= simple_form_for(@user, :url => session_path(@user), html: { class: 'form-user' }) do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= f.input :email, placeholder: "Email address", label: false, class: "sr-only"%>
  <%= f.input :password, placeholder: "Password", label: false%>
  <%= f.check_box :remember_me %>
  <%= f.label "Remember me" %>
  <%= f.button :submit, "Log in", class: 'btn btn-lg btn-primary btn-block' %>
  <br>
  <%= render "devise/shared/links" %>
<% end %>
