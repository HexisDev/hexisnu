<div class="pad-div", style="background: url(<%= asset_path 'lan1.jpg' %>) 
	no-repeat center center fixed"></div>

<div class="pad-section title">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
	  	<div class="text-vcenter">
				<h1>Platskarta</h1>
			</div>
		</div>
	</div>
</div>

<div class="pad-section">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-lg-offset-3">
			<p>Här kan man se hur många platser som är bokade på varje bord</p>
			<div class="row">
				<div class="map-object">
					<p class="text-center">Streamers</p>
				</div>
			</div>
			<div class="table-name">
				<p>B1</p>
				<p>B2</p>
				<p>B3</p>
				<p>B5</p>
			</div>
			<div class="table-name">
				<p>BG</p>
				<p>DG</p>
			</div>
			<div class="table-name">
				<p>D1</p>
				<p>D2</p>
				<p>D3</p>
				<p>D4</p>
			</div>
			<% @tables.each_slice(10) do |row| %>
				<div class="row">
					<div class="test">
						<% row.slice(0,4).each do |table| %>
							<%= render table %>
						<% end %>
					</div>
					<div class="col">
						<% row.slice(4,2).each do |table| %>
							<%= render table %>
						<% end %>
					</div>
					<div class="col">
						<% row.slice(6,4).each do |table| %>
							<%= render table %>
						<% end %>
					</div>
				</div>
			<% end %>
			<br>
			<div style="margin-top: -35px">
				<div class="table-name">
					<p>A1</p>
					<p>A2</p>
					<p>A3</p>
					<p>A5</p>
				</div>
				<div class="table-name">
					<p>AG</p>
					<p>CG</p>
				</div>
				<div class="table-name">
					<p>C1</p>
					<p>C2</p>
					<p>C3</p>
					<p>C4</p>
				</div>
			</div>
			<div class="row">
				<div class="map-object">
					<p class="text-center">Scen</p>
				</div>
			</div>
			<a style="padding: 2px; padding-right: 10px; padding-left: 10px" class="buy-button" 
              href="https://kippu.events/e/hexis"><button class="btn btn-lg btn-primary">Köp nu</button></a>
			<% if user_signed_in? && current_user.admin? %>
				<% @tables.each do |table| %>
					<%= link_to "Destroy #{table.id}", table_path(table), method: :delete, data: {confirm: "Are you sure?"} %>
					<%= link_to "Edit #{table.id}", edit_table_path(table) %>
					<%= link_to "Show #{table.id}", table_path(table) %>
					<br>
				<% end %>
				<br>
				<%= link_to "New table", new_table_path() %>
			<% end %>
		</div>
	</div>
</div>