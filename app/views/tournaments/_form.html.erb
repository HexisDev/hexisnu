<div class="create-content">
  <div class="col-xs-6 col-xs-offset-3">
    <%= simple_form_for(@tournament, html: { class: 'form-horizontal' }) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :game %>
      <%= f.input :team_size %>
      <%= f.input :developer %>
      <%= f.file_field :image %>
      <%= f.input :rules %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>