<% content_for :title do 'Turneringar' end %>

<div class="pad-div", style="background: url(<%=asset_path('bgs/1.jpg') %>) no-repeat center center fixed">
	<div class="row tourn-row">
		<div class="col-sm-10 col-sm-offset-1">
		  <% @tournaments.order(name: :asc).each do |tournament| %>
		  	<% if params[:id].to_i != tournament.id %>
					<a href="<%= tournament_path(tournament) %>" class="tourn-btn">
				<% else %>
					<a class="tourn-btn">
				<% end %>
						<button class="btn btn-lg <%= params[:id].to_i == tournament.id ? 'btn-primary disabled' : 'unselected' %>"><%= tournament.name %></button>
					</a>
	    <% end %>
		</div>
	</div>
</div>
