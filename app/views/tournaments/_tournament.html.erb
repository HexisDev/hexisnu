<div class="pad-section title">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
	  	<div class="text-vcenter">
				<h1><%= tournament.short_name %></h1>
			</div>
		</div>
	</div>
</div>

<div class="tourn-pad-section">
	<div class="row">
		<div class="tourn-img col-sm-12">
			<%= image_tag tournament.image.url.to_s, :class => 'img-responsive' %>			
		</div>
	</div>
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
			<h1><%= tournament.name %></h1>
		</div>
	</div>
  <div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
			<%= markdown tournament.description %>
		</div>
		<div class="col-sm-10 col-sm-offset-1 col-lg-3 col-lg-offset-0">
			<h3 class="tourn-info"><%= tournament.team_size %>v<%= tournament.team_size %></h3>
			<h3 class="tourn-info"><%= tournament.game %></h3>
			<h3 class="tourn-info"><%= tournament.developer %></h3>
		</div>

		<div class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
			<div class="spoiler">
	    	<h3 class="spoiler-btn">Regler <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></h3>
	  		<div class="spoiler-body collapse">
	        <%= markdown tournament.rules %>
	    	</div>
			</div>
		</div>

		<div class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
			<% if user_signed_in? && current_user.admin? %>
        <%= link_to 'Destroy', tournament_path(tournament), method: :delete, data: {confirm: 'Are you sure?'} %>
        <%= link_to 'Edit', edit_tournament_path(tournament) %>
        <%= link_to 'Show', tournament_path(tournament) %>
      <% end %>
    </div>
	</div>
</div>
