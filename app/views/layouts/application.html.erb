<!DOCTYPE html>
<html>
<head>
	<title><%= yield(:title).empty? ? "New Game" : yield(:title) %></title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag params[:controller]%>
	<%= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>
	<%= yield :charts_js %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>

<body>
	<div class="container">
		<nav class="navbar navbar-default navbar-fixed-top">
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
					<%= link_to 'New Game', "/", class: "navbar-brand"%>
		    </div>
		    <div id="navbar" class="collapse navbar-collapse">
		      <ul class="nav navbar-nav">
		        <%= nav_link 'Skapa nyhet', new_article_path %>
						<%= nav_link 'Alla nyheter', articles_path %>
						<%= nav_link 'Events', events_path %>
		      </ul>
					<ul class="nav navbar-nav navbar-right">
						<% if user_signed_in? %>
						<li class="vcenter"><%= image_tag(current_user.gravatar_url(:size => 40, :default => "retro")) %></li>
						<li class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %><span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
								<li><%= link_to('Profile', '/profile') %></li>
							</ul>
						</li>
						<% else %>
							<li><%= link_to('Login', new_user_session_path) %></li>
						<% end %>
					</ul>
		    </div><!--/.nav-collapse -->
		</nav>

		<% unless(notice.nil?) %>
  		<div class="alert alert-info"><%= notice %></div>
		<% end %>

		<% unless(alert.nil?) %>
  		<div class="alert alert-danger"><%= alert %></div>
		<% end %>

		<% unless(yield(:page_title).empty?)  %>
			<div class="page-header"><%= yield :page_title %></div>
		<% end %>
		<%= yield %>
	</div>
</body>
</html>
